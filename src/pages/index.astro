---
import MainLayout from "../layouts/main-layout.astro";
import Carousel from '../components/Carousel.astro'
import CarouselItem from '../components/CarouselItem.astro'
import Card from '../components/Card.astro'
import RoughAnnotation from '../components/RoughAnnotation'
// import RoughNotationText from "../components/RoughNotationText";
import { DUMMY_DATA, RoughNotationText } from "../components/Nav";
---
<script >
import { annotate, annotationGroup } from 'rough-notation';
const developer = document.querySelector('#developer');
const devoted = document.querySelector('#devoted');
const learning = document.querySelector('#learning');
const fullStack = document.querySelector('#fullstack');
const collaborativeProjects = document.querySelector('#collaborative-projects');
const solutions = document.querySelector('#solutions');
const together = document.querySelector('#together');
const embark = document.querySelector('#embark');
const everEvolving = document.querySelector('#ever-evolving');
const hireme = document.querySelector('#hireme');
const annotation1 = annotate(developer as HTMLElement, { type: 'highlight', color: '#99f6e4', animationDuration: 1500 } );
const annotation2 = annotate(devoted as HTMLElement, { type: 'highlight', color: '#fed7aa', animationDuration: 500, iterations: 1 } );
const annotation3 = annotate(learning as HTMLElement, { type: 'highlight', color: '#fde68a', animationDuration: 500, iterations: 1 } );
const annotation4 = annotate(fullStack as HTMLElement, { type: 'highlight', color: '#bbf7d0', animationDuration: 500, rtl: true } );
const annotation5 = annotate(collaborativeProjects as HTMLElement, { type: 'highlight', color: '#fecaca', animationDuration: 500, iterations: 3, rtl: true, } );
const annotation6 = annotate(solutions as HTMLElement, { type: 'highlight', color: '#a5f3fc', animationDuration: 500, iterations: 1 } );
const annotation7 = annotate(together as HTMLElement, { type: 'highlight', color: '#bfdbfe', animationDuration: 500, iterations: 1 } );
const annotation8 = annotate(embark as HTMLElement, { type: 'highlight', color: '#e9d5ff', animationDuration: 500, iterations: 1, rtl: true } );
const annotation9 = annotate(everEvolving as HTMLElement, { type: 'highlight', color: '#fbcfe8', animationDuration: 500, iterations: 1 } );
const annotation10 = annotate(hireme as HTMLElement, { type: 'bracket', color: '#be123c', brackets: ['left', 'right'], padding: 10, strokeWidth: 6, animationDuration: 1500 } );
const annotation11 = annotate(hireme as HTMLElement, { type: 'highlight', color: '#fcd34d', animationDuration: 1500 } );
const ag = annotationGroup ([annotation1, annotation2, annotation3, annotation4, annotation5, annotation6, annotation7, annotation8, annotation9, annotation10, annotation11 ]);
ag.show();
</script>

<MainLayout title="David Kielty">
  <main id="home" 
    class="flex justify-center py-28 xl:pt-52 pb-28 bg-slate-200/20 text-slate-600"
  >
    <div 
      class="flex justify-center flex-col lg:flex-row w-full max-w-screen-3xl text-center lg:text-left gap-10 lg:mx-10 xl:mx-20 sm:mx-16"
    >
      <div 
        class="lg:w-7/12 3xl:w-8/12 flex flex-col gap-10 mx-8 lg:mx-0"
      >
        <!-- <RoughAnnotation/>
        <RoughNotationText/> -->
        <h1 class="font-raleway text-5xl font-bold">
          Hello! I'm David, a <span id="developer">developer</span> based in the United Kingdom 
        </h1>
        <p class="font-montserrat text-2xl sm:text-justify">
          <span>As a <span id="devoted">devoted</span> enthusiast of <span id="learning">learning</span> and an aspiring <span id="fullstack">fullstack</span> technician, I am eager to contribute to the exciting world of software development. My commitment to constant growth and inventive thinking drives me to seek <span id="collaborative-projects">collaborative</span> projects that push beyond the ordinary, yielding exceptional and ingenious <span id="solutions">solutions</span>. </span>
          <span class="hidden 3xl:block ">
            <span id="together">Together</span>, we can <span id="embark">embark</span> on a journey to create outstanding software that not only meets but exceeds expectations, leaving a lasting mark on the <span id="ever-evolving">ever-evoling</span> tech landscape. Let's debug your team 
            <span id="hireme">Hire me</span> !</span>
        </p>
        <div
          class="text-xl flex font-worksans justify-center xl:justify-start flex-col xs:flex-row"
        >
          <button
            class="bg-slate-200/5 mr-1 flex-1 border-slate-600 border-2 lg:max-h-20 text-slate-600 rounded-md py-2 xs:px-8 hover:border-slate-200/10 hover:bg-slate-600 hover:text-white max-w-screen-1btn"
            >View LinkedIn</button
          >
          <button
            class="bg-slate-600 ml-1 text-white flex-1 rounded-md border-2 lg:max-h-20 border-slate-200/10 py-2 xs:px-8 hover:border-slate-200/10 hover:border-2 hover:border-slate-600 hover:bg-slate-200/20 hover:text-slate-600 max-w-screen-1btn"
            >View Github</button
          >
          <button></button>
        </div>
      </div>

      <div
        class="lg:w-5/12 3xl:w-4/12 xs:mx-10 sm:mx-30 md:mx-40 lg:mx-0 2xl:mt-0 mx-10 xl:mx-0 flex justify-center lg:justify-end items-center"
      >
        <img
          class="w-100% rounded-full max-h-[500px] 2xl:min-h-[600px] md:min-w-[360px] max-w-screen-2xl:min-w-[440px]"
          src="/images/Profile Pic 3.jpg"
        />
      </div>
    </div>
  </main>
  <section id="projects" class="flex justify-center bg-slate-200/20 text-slate-600 px-4 py-4">
    <div class="flex flex-col items-center h-full ">
      <h2 class="text-center font-raleway text-5xl font-bold py-20 ">Projects</h2>
      <div class="max-w-xs my-16 max-h-full block sm:hidden">
        <Carousel id="carousel">
            <CarouselItem>
              <Card href="https://meetups-t3.vercel.app/" title="Unite" body="Can I have a hobby with a side of friends, please?" tech="Technologies utilzed: NextJS, Typescript, Tailwind, PrismaORM, PostgreSQL, Zod, tRPC, CI/CD" imagesrc="/images/meetupMain.png"/>
            </CarouselItem>
            <CarouselItem>
              <Card href="https://pandareview.onrender.com/" title="Panda Review" body="Share your favourite oriental hot-spot diners!" tech="Technologies utilzed: Javascript, MongoDB, Mongoose, Express, Node, Sessions" imagesrc="/images/panda.png"/>
            </CarouselItem>
            <CarouselItem>
              <Card href="https://exquisite-souffle-cb2d07.netlify.app/" title="Scrumptious" body="Search for delicious recipes from all over the world!" tech="Technologies utilzed: React, FetchAPI, Styled Components, Carousel" imagesrc="/images/Girlchef.png"/>
            </CarouselItem>
            <CarouselItem>
              <Card href="https://foodapp-624be.firebaseapp.com/" title="Gusto Restaurant" body="Michelin Star quality delivered to your home." tech="Technologies utilzed:  React, Firebase, ContextAPI, SASS" imagesrc="/images/gusto.png"/>
            </CarouselItem>
        </Carousel>
      </div>
      <ul class="sm:flex flex-col gap-10 mx-4 hidden xl:flex-row flex-wrap justify-center max-w-screen-3xl">
        {DUMMY_DATA.map((project) => (
          <article class="px-10 text-xl group text-center bg-white font-montserrat py-16 rounded-lg shadow-2xl xl:w-[550px]">
            <a href={project.url} class=" flex flex-col h-[500px]">
              <div class=" flex flex-col gap-6 flex-1 py-4 px-4 tracking-tight mb-4 h-[180px]">
                <h2 class="text-3xl font-bold uppercase tracking-widest">
                  {project.title}
                </h2>
                <div class="relative w-100%">   
                  <p class="absolute group-hover:hidden align-center text-center text-2xl">
                    {project.description}
                  </p>
                  <p class="absolute hidden group-hover:block text-2xl">
                    {project.tech}
                  </p>
                </div>
              </div>
                <img
                  class="flex-1 self-center w-72 aspect-square"
                  src={project.imagesrc}
                  loading="lazy"
                />
            </a>
          </article>
        ))}
      </ul>
    </div>
  </section>
  <section id="about" class="flex justify-center  bg-slate-200/20 text-slate-600 px-4 pt-4 pb-28">
    <div class="flex flex-col items-center h-full w-9/12 self-center">
      <h2 class="text-center font-raleway text-5xl font-bold py-48 ">About Me</h2>
        <p class="font-montserrat text-2xl text-justify">I'm a dedicated software developer seeking opportunities at reputable companies. My passion lies in working with the latest tech on diverse projects and constantly expanding my skills through hands-on work and staying updated with modern methodologies.</p>
        <br/>
        <p class="font-montserrat text-2xl text-justify">I ensure robust development with TypeScript, utilizing Zod, tRPC, and type-safe ORMs such as Prisma while maintaining strict linting practices. My experience includes deploying to various platforms and working with databases such as PostgreSQL, Firebase, and MongoDB. I have also dabbled with setting up testing CI/CD pipelines using GitHub Actions, yaml and Docker.</p>
        <br/>
        <p class="font-montserrat text-2xl text-justify">My CSS skills encompass CSS modules, SCSS, SASS, styled components, and popular frameworks like Tailwind, DaisyUI, and BootstrapUI. In the world of React, I'm well-versed in hooks, context API, fetch API, react-query, and global state management (with Redux).</p>        
        <br/>
        <p class="font-montserrat text-2xl text-justify">I am looking forward to collaborating with your established team in an agile environment and learning from your knowledgable expertise.</p>
    </div>
  </section>
